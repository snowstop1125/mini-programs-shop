/* pages/member/member.wxss */
.member-head{
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
}
.member-info{
  background:#d74a45;
  background: -webkit-linear-gradient(top, #d74a45, rgb(240, 112, 105));
  color: #fff;
  width: 100%;
  height: 200rpx;
  display: flex;
  align-items: center;
  padding-bottom: 20rpx;
  justify-content:space-between;
}
.member-info .info-l{
  display: flex;
  align-items: center;
}
.member-head .user-pic{
  width: 150rpx;
  height: 150rpx;
  margin: 0rpx 0rpx 0 30rpx;
  border-radius: 50%;
  background: -webkit-linear-gradient(top, #d74a45, rgb(240, 112, 105));
  /* border: 10rpx solid -webkit-linear-gradient(top, #d74a45, rgb(240, 112, 105)); */
  overflow: hidden;
  /* background: rgba(255, 255, 255, .2); */
  display: flex;
  align-items: center;
  position: relative;
  z-index: 2;
}
.member-head .user-pic image{
  width: 130rpx;
}
.member-head .user-name{
  color: #fff;
}
.member-head .user-name navigator{
  margin-left:10rpx;
}
.member-head .user-name .r-arrow{
  margin-left: 10rpx;
}
.member-head .user-name .user-vip{
  background: rgba(255, 255, 255, .2);
  color:#fff;
  padding:10rpx 30rpx;
  border-radius:0 40rpx 40rpx 0;
  font-size: 24rpx;
  margin-top:15rpx;
  margin-left: -22rpx;
}
.member-head .member-sign{
  background:#f9b74a;
  color:#fff;
  padding:20rpx 30rpx;
  border-radius:40rpx 0rpx 0rpx 40rpx;
  font-size: 28rpx;
}

.member-asset{
  display: flex;
  background: #fff;
  padding: 35rpx 0;
  box-shadow: 0 5rpx 10rpx rgba(215, 74, 69, 0.5);
}
.member-asset .item{
  flex-grow:1;
  text-align: center;
}
.member-asset .item text{
  display: block;
  font-size: 26rpx;
  color: #999;
}
.member-asset .item text.val{
  font-size: 32rpx;
  margin-bottom: 10rpx;
  color: #d74a45;
}
