/* pages/car/car.wxss */
.edit{
  position: fixed;
  top: -1px;
  right: 60rpx;
  box-shadow: 0 1px 2px #999;
  background: rgba(255, 255, 255, .7);
  border-radius: 0 0 20rpx 20rpx; 
  width:80rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  font-size: 25rpx;
  color: #888;
}
.footBar{
  position: fixed;
  bottom: 0;
  background: #fff;
  box-shadow: 0px 0px 20rpx #999;
  height: 100rpx;
  width: 100%;
  display: flex;
  justify-content: space-between;
}
.footBar .con-l{
  margin-left:20rpx;
  padding-top:30rpx;
}
.footBar .con-r{
  display: flex;
}
.footBar .con-r .con-r-l{
  text-align: right;
  margin: 15rpx 15rpx 0 0;
}
.footBar .con-r .total{
  font-weight: bold;
  
}
.footBar .con-r .detail{
  font-size: 20rpx;
  color:#999;
}
.con-r .settle-btn{
  background: #d74a45;
  width:200rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  color: #fff;
  font-size: 32rpx;
}
.con-r .settle-btn text{
  font-size: 22rpx;
}